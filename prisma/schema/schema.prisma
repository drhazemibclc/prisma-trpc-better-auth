generator client {
  provider = "prisma-client-js"
  output   = "../../generated"
  moduleFormat = "esm"
  previewFeatures = ["views", "relationJoins", "queryCompiler", "driverAdapters"]
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}


